@page "/users"
@rendermode InteractiveServer

<PageTitle>Users</PageTitle>


<h1>@PageTitle</h1>


@if (_users == null)
{
    <p><em>Fetching users...</em></p>
}
else
{

    <button @onclick="GetAllUsers">Display all registered users</button>

    <button @onclick="GetSomeUsers">Display selection of registered users</button>

    <button @onclick="GetUsersOrderedByName">Display users ordered by name</button>

    <button @onclick="GetUsersOrderedByID">Display users ordered by ID</button>

    <button @onclick="GetUsersOrderedByCompanyName">Display users ordered by company name</button>

    <button @onclick="GetUsersOrderedByCity">Display users ordered by city</button>

    <table class="table">
        <thead>
            <tr>
                <th>ID</th>
                <th>Name</th>
                <th>Email</th>
                <th>Street</th>
                <th>Zip Code</th>
                <th>City</th>
                <th>Company name</th>
                <th>Catch phrase</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var user in _users)
            {
                <tr>
                    <td>@user.ID</td>
                    <td>@user.Name</td>
                    <td>@user.Email</td>
                    <td>@user.Address.Street</td>
                    <td>@user.Address.ZipCode</td>                    
                    <td>@user.Address.City</td>
                    <td>@user.Company.CompanyName</td>
                    <td>@user.Company.CatchPhrase</td>
                </tr>
            }
        </tbody>
    </table>
}

