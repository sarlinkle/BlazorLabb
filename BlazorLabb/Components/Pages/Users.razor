@if (_users == null)
{
    <p><em>Fetching users...</em></p>
}
else
{

    //Är det viktigt att det inte stannar på some users ordered by name/ID etc (nu återgår det till att visa 30 st varje gång)

    <button @onclick="GetAllUsers">Show all registered users</button>

    <button @onclick="GetSomeUsers">Show selection of registered users</button>

    <button @onclick="GetUsersOrderedByName">Order by name</button>

    <button @onclick="GetUsersOrderedByID">Order by ID</button>

    <button @onclick="GetUsersOrderedByCompanyName">Order by company name</button>

    <button @onclick="GetUsersOrderedByCity">Order by city</button>

    <input @bind-value="SearchText" @bind-value:event="oninput" placeholder="Search user name"/>

    @if (SearchText != String.Empty)
    {
        GetUserNameFilteredBySearch(SearchText);
    } 


    @*
    <input @bind-value="SearchText" @bind-value:event="oninput" placeholder="Search ID-number" />
